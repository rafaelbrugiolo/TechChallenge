@model UserViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Date Of Birth:
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Edit</button></a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Delete</button></a> |
    <a asp-action="Index"><button type="button" class="btn btn-outline-primary btn-sm">Return to the list</button></a>
</div>
