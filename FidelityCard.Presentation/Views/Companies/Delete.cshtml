@using FidelityCard.Application.Dtos.Response;
@model CompanyResponseDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a COMPANY</h1>

<h3>This action will permanently delete the registry below</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Company's Registered Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class="col-sm-2">
            Company's Trade Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TradeName)
        </dd>
        <dt class="col-sm-2">
            CNPJ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index"><button type="button" class="btn btn-outline-primary btn-sm">Return to the list</button></a>
    </form>
</div>
