@using FidelityCard.Application.Dtos.Response;

@model IEnumerable<CompanyResponseDto>

@{
    ViewData["Title"] = "Companies";
}

<h1>Registered COMPANIES</h1>

<div class="d-grid gap-2">
    <a asp-action="Create"><button class="btn btn-secondary" type="button"> - Register a New Company - </button></a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Cnpj
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(company => company.CompanyName))
    {
        <tr>
                <td>
                    @item.TradeName
                </td>
                <td>
                    @item.Cnpj
                </td>
                <td>
                    <a asp-controller="Companies" asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Edit</button></a> |
                    <a asp-controller="Companies" asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Details</button></a> |
                    <a asp-controller="Companies" asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Delete</button></a>
                </td>
            </tr>
    }
    </tbody>
</table>
