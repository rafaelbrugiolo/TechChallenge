@using FidelityCard.Application.Dtos.Response;
@model PromoResponseDto;

@{
	ViewData["Title"] = "Details";
}

<h1>Promo Details</h1>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Name:
		</dt>
		<dd class="col-sm-10">
			@Model.Name
		</dd>
		<dt class="col-sm-2">
			Description:
		</dt>
		<dd class="col-sm-10">
			@Model.Description
		</dd>
		<dt class="col-sm-2">
			Product:
		</dt>
		<dd class="col-sm-10">
			@Model.Product.Description
		</dd>
		<dt class="col-sm-2">
			Number of purchases to prize:
		</dt>
		<dd class="col-sm-10">
			@Model.TimesToPrize
		</dd>
		<dt class="col-sm-2">
			Starting Date:
		</dt>
		<dd class="col-sm-10">
			@Model.From.Date.ToString("dd MMM yyyy")
		</dd>
		<dt class="col-sm-2">
			Ending Date:
		</dt>
		<dd class="col-sm-10">
			@Model.To.Date.ToString("dd MMM yyyy")
		</dd>
		<dt class="col-sm-2">
			Image for promotion:
		</dt>
		<dd class="col-sm-10">
			@if (Model.ImageContent != null)
			{
				<img src="data:image/png;base64, @Model.ImageContent" class="imageSize" />
			}
			else
			{
				<div><img src="~/lib/img/No_Image_Available.jpg" class="thumb" /></div>
			}

		</dd>
	</dl>
</div>
<div class="mb-5">
	<a asp-action="Edit" asp-route-id="@Model?.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Edit</button></a> |
	<a asp-action="Delete" asp-route-id="@Model?.Id"><button type="button" class="btn btn-outline-secondary btn-sm">Delete</button></a> |
	<a asp-action="Index"><button type="button" class="btn btn-outline-primary btn-sm">Return to the list</button></a>
</div>