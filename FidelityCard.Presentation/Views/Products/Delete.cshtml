@using FidelityCard.Application.Dtos.Response;
@model ProductResponseDto

@{
    ViewData["Title"] = "Delete";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h1>Delete a PRODUCT</h1>

<h3>This action will permanently delete the registry below</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Description:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
                <dd class="col-sm-10">
            @Model.Price
        </dd>
    </dl>

    <form asp-controller="Products" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index"><button type="button" class="btn btn-outline-primary btn-sm">Return to the list</button></a>
    </form>
</div>
